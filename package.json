{
  "name": "angular-mdc",
  "description": "Material Web Components for Angular",
  "homepage": "https://github.com/trimox/angular-mdc-web",
  "bugs": "https://github.com/trimox/angular-mdc-web/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/trimox/angular-mdc-web.git"
  },
  "license": "MIT",
  "version": "4.0.0",
  "engines": {
    "node": ">= 12.0.0",
    "yarn": ">= 1.19.1"
  },
  "requiredAngularVersion": "^8.0.0 || ^9.0.0-rc.7",
  "scripts": {
    "build": "gulp web:build",
    "build:release": "gulp web:build-release",
    "migrate-mdc-sass": "rimraf packages/material-components-web/scss && node scripts/migrate-mdc-scss.js",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "lint": "tslint 'packages/**/*.ts'",
    "lint:css": "stylelint \"packages/material-components-web/**/*.scss\"",
    "fix:css": "stylelint --fix \"packages/material-components-web/**/*.scss\"",
    "test": "karma start --single-run",
    "test:watch": "karma start --auto-watch"
  },
  "dependencies": {
    "@angular/cdk": "^9.0.0-rc.6",
    "@angular/common": "^9.0.0-rc.7",
    "@angular/compiler": "^9.0.0-rc.7",
    "@angular/core": "^9.0.0-rc.7",
    "@angular/forms": "^9.0.0-rc.7",
    "@angular/platform-browser": "^9.0.0-rc.7",
    "core-js": "2.6.9",
    "material-components-web": "^4.0.0",
    "rxjs": "^6.5.3",
    "tsickle": "0.37.1",
    "tslib": "1.10.0",
    "zone.js": "^0.10.2"
  },
  "devDependencies": {
    "@angular/compiler-cli": "^9.0.0-rc.7",
    "@angular/platform-browser-dynamic": "^9.0.0-rc.7",
    "@babel/core": "^7.6.0",
    "@babel/preset-env": "^7.6.0",
    "@rollup/plugin-commonjs": "^11.0.1",
    "@rollup/plugin-node-resolve": "^7.0.0",
    "@rollup/plugin-alias": "^3.0.0",
    "@types/fs-extra": "^8.0.0",
    "@types/glob": "^7.1.1",
    "@types/gulp": "^4.0.6",
    "@types/jasmine": "^3.3.16",
    "@types/node": "^13.1.4",
    "babel-loader": "^8.0.6",
    "babel-plugin-istanbul": "^6.0.0",
    "codecov": "^3.5.0",
    "codelyzer": "^5.1.0",
    "cpx": "^1.5.0",
    "cz-conventional-changelog": "^3.0.2",
    "fs-extra": "^8.1.0",
    "glob": "^7.1.4",
    "gulp": "^4.0.2",
    "gulp-clean": "^0.4.0",
    "gulp-cli": "^2.2.0",
    "gulp4-run-sequence": "^1.0.0",
    "istanbul-instrumenter-loader": "^3.0.1",
    "jasmine-core": "^3.4.0",
    "karma": "^4.3.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-coverage-istanbul-reporter": "^2.1.0",
    "karma-jasmine": "^3.0.1",
    "karma-webpack": "^4.0.2",
    "magic-string": "^0.25.3",
    "node-sass": "^4.12.0",
    "rollup": "^1.29.0",
    "rollup-plugin-babel": "^4.3.3",
    "sorcery": "^0.10.0",
    "stylelint": "^9.10.1",
    "stylelint-config-standard": "^18.0.0",
    "stylelint-order": "^2.0.0",
    "stylelint-scss": "^3.5.3",
    "stylelint-selector-bem-pattern": "^2.1.0",
    "terser": "^4.6.2",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.5.4",
    "tsconfig-paths": "^3.9.0",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "tslint": "^5.20.0",
    "typescript": "~3.6.4",
    "validate-commit-msg": "^2.14.0",
    "webpack": "^4.40.2",
    "webpack-cli": "^3.3.8"
  },
  "config": {
    "validate-commit-msg": {
      "helpMessage": "%s\nNOTE: Please see angular's commit message guidelines (https://github.com/angular/angular.js/blob/master/CONTRIBUTING.md#commit) for information on how to format commit messages.\n\nAs an example, here is a valid commit message: 'docs(slider): Document slider public api'\n\nIf this commit is on a development / WIP branch, you can disable this by running `git commit --no-verify`.",
      "scope": {
        "allowed": [
          "button",
          "card",
          "checkbox",
          "chips",
          "data-table",
          "dialog",
          "drawer",
          "elevation",
          "fab",
          "floating-label",
          "form-field",
          "grid-list",
          "icon",
          "icon-button",
          "image-list",
          "layout-grid",
          "linear-progress",
          "line-ripple",
          "list",
          "material-icon",
          "menu",
          "menu-surface",
          "notched-outline",
          "radio",
          "ripple",
          "rtl",
          "select",
          "shape",
          "slider",
          "snackbar",
          "switch",
          "tab",
          "tab-bar",
          "tab-indicator",
          "tab-scroller",
          "text-field",
          "top-app-bar",
          "typography",
          "demos",
          "infrastructure",
          "package"
        ],
        "validate": true
      }
    },
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "private": true
}
